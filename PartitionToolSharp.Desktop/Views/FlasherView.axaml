<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PartitionToolSharp.Desktop.ViewModels"
             xmlns:u="https://irihi.tech/ursa"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PartitionToolSharp.Desktop.Views.FlasherView"
             x:DataType="vm:FlasherViewModel">
    <ScrollViewer Padding="30">
        <StackPanel Spacing="30">
            <TextBlock Text="Flasher &amp; Image Tools" FontSize="24" FontWeight="SemiBold"/>
            
            <Grid ColumnDefinitions="*, *" HorizontalAlignment="Stretch">
                <!-- Sparse Tools -->
                <u:Banner Grid.Column="0" Header="Sparse Image Converter" Classes="Information" Margin="0,0,10,0">
                    <StackPanel Spacing="15" Margin="0,10,0,0">
                        <TextBlock Text="Convert between Android Sparse and Raw images." Classes="Secondary" FontSize="12" TextWrapping="Wrap"/>
                        
                        <Button Content="Sparse to Raw..." 
                                Command="{Binding ConvertSparseToRawCommand}"
                                HorizontalAlignment="Stretch"
                                Classes="Primary" Theme="{DynamicResource SolidButton}"/>
                        
                        <Button Content="Raw to Sparse..." 
                                Command="{Binding ConvertRawToSparseCommand}"
                                HorizontalAlignment="Stretch"
                                Classes="Primary" Theme="{DynamicResource SolidButton}"/>
                    </StackPanel>
                </u:Banner>

                <!-- Flash Tools -->
                <u:Banner Grid.Column="1" Header="Flash Utility" Classes="Warning" Margin="10,0,0,0">
                    <StackPanel Spacing="15" Margin="0,10,0,0">
                        <TextBlock Text="Flash images directly to device partitions using Fastboot." Classes="Secondary" FontSize="12" TextWrapping="Wrap"/>
                        
                        <Grid ColumnDefinitions="*, Auto">
                            <ComboBox Grid.Column="0" 
                                      ItemsSource="{Binding ConnectedDevices}" 
                                      SelectedItem="{Binding SelectedDevice}"
                                      PlaceholderText="Select Device"
                                      HorizontalAlignment="Stretch"/>
                            <Button Grid.Column="1" 
                                    Command="{Binding RefreshDevicesCommand}" 
                                    Margin="5,0,0,0"
                                    Content="Refresh"/>
                        </Grid>

                        <StackPanel Spacing="5">
                            <TextBlock Text="Partition:" FontSize="12" Foreground="{DynamicResource SemiGrey6}"/>
                            <TextBox Text="{Binding PartitionName}" 
                                     Watermark="e.g. recovery, boot, system"/>
                        </StackPanel>

                        <Grid ColumnDefinitions="*, Auto">
                            <TextBox Grid.Column="0" 
                                     Text="{Binding SelectedImagePath}" 
                                     IsReadOnly="True"
                                     Watermark="Select Image File..."/>
                            <Button Grid.Column="1" 
                                    Command="{Binding SelectImageCommand}" 
                                    Margin="5,0,0,0"
                                    Content="Browse"/>
                        </Grid>

                        <ProgressBar IsIndeterminate="True" Height="4" IsVisible="{Binding IsBusy}"/>
                        <Button Content="Flash Partition" 
                                Command="{Binding FlashCommand}"
                                IsEnabled="{Binding !IsBusy}"
                                HorizontalAlignment="Stretch"
                                Classes="Warning" Theme="{DynamicResource SolidButton}"/>
                        
                        <Button Content="Reboot Device" 
                                Command="{Binding RebootCommand}"
                                HorizontalAlignment="Stretch"
                                Classes="Secondary"/>
                    </StackPanel>
                </u:Banner>
            </Grid>

            <!-- Status Logs -->
            <Border Background="{DynamicResource SemiGrey1}" 
                    BorderBrush="{DynamicResource SemiGrey3}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    MinHeight="150">
                <ScrollViewer x:Name="LogScrollViewer">
                    <ItemsControl ItemsSource="{Binding Logs}" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <SelectableTextBlock Text="{Binding}" 
                                                   FontSize="12" 
                                                   FontFamily="Consolas,Monospace"
                                                   Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
