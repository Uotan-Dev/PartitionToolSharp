<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PartitionToolSharp.Desktop.ViewModels"
             xmlns:u="https://irihi.tech/ursa"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PartitionToolSharp.Desktop.Views.DashboardView"
             x:DataType="vm:DashboardViewModel"
             x:Name="RootDashboard">
    
    <ScrollViewer Padding="30">
        <StackPanel Spacing="30">
            <StackPanel Spacing="10">
                <TextBlock Text="Device Overview" FontSize="24" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" Spacing="5" IsVisible="{Binding CurrentPath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="Current Image:" Classes="Secondary"/>
                    <TextBlock Text="{Binding CurrentPath}" Foreground="{DynamicResource SemiBlue6}"/>
                </StackPanel>
            </StackPanel>

            <Grid ColumnDefinitions="*, 300" HorizontalAlignment="Stretch">
                <StackPanel Grid.Column="0" Spacing="30">
                    <UniformGrid Columns="3">
                        <Border Background="{DynamicResource SemiGrey1}" BorderBrush="{DynamicResource SemiGrey3}" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Total Device Size" FontSize="12" Foreground="{DynamicResource SemiGrey6}"/>
                                <TextBlock Text="{Binding DeviceSize}" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="{DynamicResource SemiGrey1}" BorderBrush="{DynamicResource SemiGrey3}" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Metadata Slots" FontSize="12" Foreground="{DynamicResource SemiGrey6}"/>
                                <TextBlock Text="{Binding SlotCount}" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="{DynamicResource SemiGrey1}" BorderBrush="{DynamicResource SemiGrey3}" BorderThickness="1" CornerRadius="8" Padding="15" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Metadata Max Size" FontSize="12" Foreground="{DynamicResource SemiGrey6}"/>
                                <TextBlock Text="{Binding MetadataSize}" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <Border Classes="Card" Padding="20" Background="{DynamicResource SemiGrey1}" CornerRadius="8">
                        <StackPanel Spacing="15">
                            <Grid ColumnDefinitions="*, Auto">
                                <TextBlock Text="Space Utilization" FontWeight="Medium"/>
                                <TextBlock Grid.Column="1" Text="{Binding UsageText}" Classes="Secondary"/>
                            </Grid>
                            <ProgressBar Maximum="100" Value="{Binding UsagePercentage}" Height="12" ShowProgressText="False"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Spacing="15">
                        <TextBlock Text="Partition Groups" FontSize="18" FontWeight="SemiBold"/>
                        <ItemsControl ItemsSource="{Binding Groups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:GroupInfo">
                                    <Border Background="{DynamicResource SemiGrey1}" BorderBrush="{DynamicResource SemiGrey3}" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                            <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,5,0,0">
                                                <StackPanel Orientation="Horizontal" Spacing="5">
                                                    <TextBlock Text="Size Limit:" Classes="Secondary" FontSize="12"/>
                                                    <TextBlock Text="{Binding SizeText}" FontSize="12"/>
                                                </StackPanel>
                                                <Border Background="{DynamicResource SemiGrey2}" Padding="8,2" CornerRadius="4">
                                                    <TextBlock Text="{Binding FlagsText}" FontSize="12" Foreground="{DynamicResource SemiGrey7}"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="30,0,0,0" Spacing="20">
                    <TextBlock Text="Recent Files" FontSize="18" FontWeight="SemiBold"/>
                <ItemsControl ItemsSource="{Binding RecentFiles}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Button Classes="Tertiary" 
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Left" 
                                    Margin="0,2"
                                    Command="{Binding #RootDashboard.((vm:DashboardViewModel)DataContext).OpenRecentFileCommand}"
                                    CommandParameter="{Binding}">
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="12"/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                    
                    <Border Background="{DynamicResource SemiBlue1}" BorderBrush="{DynamicResource SemiBlue3}" BorderThickness="1" CornerRadius="8" Padding="15">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Quick Actions" FontWeight="Bold" Foreground="{DynamicResource SemiBlue6}"/>
                            <Button Content="Open New Image" Command="{Binding RequestOpenImageCommand}" Classes="Primary" Theme="{DynamicResource SolidButton}" HorizontalAlignment="Stretch"/>
                            <Button Content="Settings" Classes="Basic" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
