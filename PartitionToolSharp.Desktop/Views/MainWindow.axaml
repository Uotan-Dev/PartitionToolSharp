<u:UrsaWindow xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:vm="using:PartitionToolSharp.Desktop.ViewModels"
              xmlns:views="using:PartitionToolSharp.Desktop.Views"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:u="https://irihi.tech/ursa"
              mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
              x:Class="PartitionToolSharp.Desktop.Views.MainWindow"
              x:DataType="vm:MainViewModel"
              Title="PartitionToolSharp.Desktop">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext at runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainViewModel/>
    </Design.DataContext>

    <u:UrsaWindow.TitleBarContent>
        <TextBlock Text="PartitionToolSharp" VerticalAlignment="Center" Margin="8,0"/>
    </u:UrsaWindow.TitleBarContent>

    <Grid ColumnDefinitions="Auto, *" Margin="0,32,0,0">
        <!-- Sidebar -->
        <Border Grid.Column="0" Width="220" Background="{DynamicResource SemiGrey1}" BorderBrush="{DynamicResource SemiGrey3}" BorderThickness="0,0,1,0">
            <StackPanel Spacing="5" Margin="0,20">
                <TextBlock Text="PartitionToolSharp" FontSize="18" FontWeight="Bold" Margin="20,0,20,20"/>
                
                <u:NavMenu HorizontalAlignment="Stretch">
                    <u:NavMenuItem Header="Dashboard" 
                                   Command="{Binding NavigateCommand}" 
                                   CommandParameter="Dashboard">
                        <u:NavMenuItem.Icon>
                            <PathIcon Data="{DynamicResource SemiIconDashboard}" />
                        </u:NavMenuItem.Icon>
                    </u:NavMenuItem>
                    <u:NavMenuItem Header="Partition Manager" 
                                   Command="{Binding NavigateCommand}" 
                                   CommandParameter="PartitionManager">
                        <u:NavMenuItem.Icon>
                            <PathIcon Data="{DynamicResource SemiIconEdit}" />
                        </u:NavMenuItem.Icon>
                    </u:NavMenuItem>
                    <u:NavMenuItem Header="Flasher &amp; Images" 
                                   Command="{Binding NavigateCommand}" 
                                   CommandParameter="Flasher">
                        <u:NavMenuItem.Icon>
                            <PathIcon Data="{DynamicResource SemiIconHardDrive}" />
                        </u:NavMenuItem.Icon>
                    </u:NavMenuItem>
                    <u:NavMenuItem Header="Settings" 
                                   Command="{Binding NavigateCommand}" 
                                   CommandParameter="Settings">
                        <u:NavMenuItem.Icon>
                            <PathIcon Data="{DynamicResource SemiIconSetting}" />
                        </u:NavMenuItem.Icon>
                    </u:NavMenuItem>
                </u:NavMenu>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" RowDefinitions="Auto, *">
            <ContentControl Grid.Row="1" Content="{Binding CurrentView}">
                <ContentControl.DataTemplates>
                    <DataTemplate DataType="vm:DashboardViewModel">
                        <views:DashboardView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:PartitionManagerViewModel">
                        <views:PartitionManagerView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:FlasherViewModel">
                        <views:FlasherView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:SettingsViewModel">
                        <views:SettingsView/>
                    </DataTemplate>
                </ContentControl.DataTemplates>
            </ContentControl>
        </Grid>
    </Grid>
</u:UrsaWindow>
